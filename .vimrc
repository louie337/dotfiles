let g:highlightedyank_highlight_duration = "100"

set number
set relativenumber
set confirm = true
set cursorline = false
set ignorecase = true
set smartcase = true 
set smartindent = true 
set spell = true
set scrolloff = 5
set tabstop = 2
set shiftwidth = 2 
set termguicolors = true 
set hlsearch = true

" Keymaps
map <leader>nl :nohl<CR>
map <leader>ln :set rnu!<CR>
nnoremap j gj
nnoremap gj j
nnoremap k gk
nnoremap gk k